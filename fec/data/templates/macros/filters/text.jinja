{% macro field(name, title, attrs={}, id_suffix='', minor_label_text=False, helper_text=False, select_qty='multi') %}
<div class="filter js-filter" id="{{ name }}-field{{id_suffix}}" data-filter="text" data-select-qty="{{ select_qty }}">
  {% if minor_label_text %}
    <label for="{{ name }}{{ id_suffix }}" class="u-margin--bottom--small">{{ title }}</label>
  {% else %}
    <label class="label" for="{{ name }}{{ id_suffix }}">{{ title }}</label>
  {% endif %}
  {% if helper_text %}
    <label class="label--help u-margin--top">{{ helper_text }}</label>
  {% endif %}
  <div class="combo combo--filter--mini">
    <input id="{{ name }}{{ id_suffix }}" type="{{ attrs.type|default('text') }}" name="{{ name }}" class="combo__input"
      {% for attr, value in attrs.items() %}
        {{ attr }}="{{ value }}"
      {% endfor %}
    />
    <button class="combo__button button--go button--standard is-disabled" type="button">
      <span class="u-visually-hidden">Search</span>
    </button>
  </div>
</div>
{% endmacro %}

