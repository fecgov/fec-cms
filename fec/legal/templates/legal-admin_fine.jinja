{% extends "layouts/main.jinja" %}
{% import 'macros/breadcrumbs.jinja' as breadcrumb %}
{% import 'macros/legal.jinja' as legal %}
 {% set breadcrumb_links=[('/legal-resources', 'Legal resources'), ('/legal-resources/enforcement', 'Enforcement'), ('/data/legal/search/admin_fines', 'Administrative Fine')] %}
 {% block title %}Administrative Fine #{{ admin_fine.no }}{% endblock %}
 {% block css %}
<link rel="stylesheet" type="text/css" href="{{ asset_for_css('legal-common.css') }}" />
{% endblock %}
{% block body %}
<header class="page-header slab slab--primary">
  {{ breadcrumb.breadcrumbs('Admin Fine #%s' % (admin_fine.no,), breadcrumb_links) }}
</header>
<div class="container main legal-admin_fine">
  <div class="content__section">
    <header class="heading--main">
      <h1>Administrative Fine #{{ admin_fine.no }}</h1>
      <span class="heading__subtitle">{{ admin_fine.name }}</span>
    </header>
  </div>
  <div class="sidebar-container sidebar-container--left js-sticky-side" data-sticky-container="main">
      <nav class="sidebar sidebar--neutral sidebar--left side-nav js-toc">
        <ul class="sidebar__content">
          <li class="side-nav__item"><a class="side-nav__link" href="#summary">Summary</a></li>
          <li class="side-nav__item"><a class="side-nav__link" href="#disposition">Disposition</a></li>
          <li class="side-nav__item"><a class="side-nav__link" href="#documents">Documents</a></li>
        </ul>
      </nav>
  </div>
  <div class="main__content--right">
    <section id="summary" class="content__section">
    <div>
      <h2 class="t-ruled--bold">Summary</h2>
      <div class="legal-admin_fine__property">
        <p>
          <strong>REPORT:</strong> {{ admin_fine.report_type }}, {{ admin_fine.report_year }}
        </p>
      </div>
      <div class="legal-admin_fine__property">
        <p>
          <strong>COMMITTEE NAME:</strong> {{ admin_fine.name }}
        </p>
      </div>
      <div class="legal-admin_fine__property">
        <p>
          <strong>CLOSING DATE:</strong> {{ admin_fine.final_determination_date | date(fmt='%m/%d/%Y') }}
        </p>
      </div>
      <div class="legal-admin_fine__property">
        <p>
          <strong>ASSESSED CIVIL PENALTY:</strong> {{ admin_fine.final_determination_amount | currency or '' }}
        </p>
      </div>
      <div class="legal-admin_fine__property">
        <p>
          <strong>CIVIL PENALTY DUE DATE:</strong> 
          {# TODO: This will be added when we get the data. 00/00/0000, not yet paid / paid in full / partially paid {{ admin_fine.check_amount }} #}
          {# Payment status key for API: Yes = paid in full, No = not paid, Pending = partially paid {{ admin_fine.check_amount }} #}
        </p>
      </div>
    </section>
    <section id="disposition" class="content__section">
      <h2 class="t-ruled--bold">Disposition</h2>
      <div class="legal-admin_fine__property">
        <p>
          {{ '<br>'.join(admin_fine['disposition_text']) | safe | replace('RTB', 'reason to believe') }}
        </p>
      </div>
      <table class="data-table simple-table">
        <thead>
          <tr>
            <th>Disposition</th>
            <th>Amount</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Initial finding and proposed fine</td>
            <td>{{ admin_fine.reason_to_believe_fine_amount | currency or '' }}</td>
            <td>{{ admin_fine.reason_to_believe_action_date | date(fmt='%m/%d/%Y') }}</td>
          </tr>
          <tr>
          {% if 'documents' in admin_fine and admin_fine.documents_by_type %}
            {% for category in admin_fine.documents_by_type %}
              {% set categoryloop = loop %}
              {% for document in admin_fine.documents_by_type[category] %}
                <tr class="{{ categoryloop.cycle('row-color-normal', 'row-color-contrast') }}">
                  <td>{{ admin_fine.challenge_outcome | replace('RTB', 'reason to believe') | capitalize }}</td>
                  <td>{{ admin_fine.final_determination_amount | currency or '' }}</td>
                  <td>{{ admin_fine.final_determination_date | date(fmt='%m/%d/%Y') or 'None' }}</td>
                </tr>
              {% endfor %}
            {% endfor %}
          {% endif %}
          {% if admin_fine.challenge_receipt_date != none %}
            <tr>
              <td>Challenge received</td>
              <td>No amount</td>
              <td>{{ admin_fine.challenge_receipt_date | date(fmt='%m/%d/%Y') }}</td>
            </tr>
          {% endif %}
          {% if admin_fine.treasury_referral_amount != none and admin_fine.treasury_referral_date != none %}
            <tr>
              <td>Referred to the Department of the Treasury for collection</td>
              <td>{{ admin_fine.treasury_referral_amount | currency or 'No amount' }}</td>
              <td>{{ admin_fine.treasury_referral_date | date(fmt='%m/%d/%Y') or 'No date' }}</td>
            </tr>
          {% endif %}
        </tbody>
      </table>
    </section>
    <section id="documents" class="content__section">
      <h2 class="t-ruled--bold u-no-margin">Documents</h2>
      <table class="data-table simple-table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Title</th>
          </tr>
        </thead>
        <tbody>
          {% if 'documents' in admin_fine and admin_fine.documents_by_type %}
            {% for category in admin_fine.documents_by_type %}
              {% set categoryloop = loop %}
              {% for document in admin_fine.documents_by_type[category] %}
                <tr class="{{ categoryloop.cycle('row-color-normal', 'row-color-contrast') }}">
                  <td>{{ document.document_date | date('%m/%d/%Y')}}</td>
                  <td><a href="{{ document.url }}">{{ document.description }}</a>  {{ document.length | filesize }}</td>
                </tr>
              {% endfor %}
            {% endfor %}
          {% endif %}
        </tbody>
      </table>
    </section>
  </div>
</div>
{% endblock %}
