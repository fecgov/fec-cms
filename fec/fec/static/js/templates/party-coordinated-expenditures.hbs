{{!--
Template for Party Coordinated Expenditures datatable details row
---------------------
This shows all the fields available on the Schedule F form.
--}}
<div class="dt-details__sect">
  <table>
    <caption>Committee information</caption>
    {{#dtDetailsTableRow "Name"~}}
      <a href="{{basePath}}/committee/{{committee_id}}">{{committee.name}}</a>
    {{/dtDetailsTableRow}}
    {{#if subordinate_committee}}
      {{#dtDetailsTableRow "Full Name of Subordinate Committee"~}}
        {{subordinate_committee.name}}
      {{/dtDetailsTableRow}}
    {{/if}}
    {{#dtDetailsTableRow "Mailing Address"~}}
      {{committee.street_1}}<br>
      {{committee.city}}, {{committee.state}} {{zipCode committee.zip}}
    {{/dtDetailsTableRow}}
  </table>
</div>

<div class="dt-details__sect">
  <table>
    <caption>Candidate information</caption>
    {{#dtDetailsTableRow "Candidate"~}}
      <a href="{{basePath}}/candidate/{{candidate_id}}">{{candidate_last_name}}, {{candidate_first_name}} {{candidate_middle_name}}</a>
    {{/dtDetailsTableRow}}
    {{#dtDetailsTableRow "Office"~}}
      {{candidate_office_full}}
    {{/dtDetailsTableRow}}
    {{#if candidate_office_state}}
      {{#dtDetailsTableRow "State"~}}
        {{candidate_office_state_full}}
      {{/dtDetailsTableRow}}
    {{/if}}
    {{#if candidate_office_district}}
      {{#dtDetailsTableRow "District"~}}
        {{candidate_office_district}}
      {{/dtDetailsTableRow}}
    {{/if}}
  </table>
</div>

<div class="dt-details__sect">
  <table>
    <caption>Expenditure information</caption>
    {{#dtDetailsTableRow "Payee"~}}
      {{#if payee_name~}}
        {{payee_name}}
      {{/if}}
    {{/dtDetailsTableRow}}
    {{#dtDetailsTableRow "Purpose of Expenditure"~}}
      {{{expenditure_purpose_full}}}
    {{/dtDetailsTableRow}}
    {{#dtDetailsTableRow "Category/Type"~}}
      {{{expenditure_type}}}
    {{/dtDetailsTableRow}}
    {{#dtDetailsTableRow "Date"~}}
      {{datetime expenditure_date}}
    {{/dtDetailsTableRow}}
    {{#dtDetailsTableRow "Amount"~}}
      {{currency expenditure_amount}}
    {{/dtDetailsTableRow}}
  </table>
</div>
