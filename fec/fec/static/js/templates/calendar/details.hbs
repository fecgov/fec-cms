{{!-- <div class="tooltip tooltip--under cal-details" id="{{ detailsId }}" role="tooltip"> --}}
  <div class="tooltip__heading">
    <span class="tooltip__title">{{ category }}</span>
    <button class="button button--close--inverse js-close" type="button"><span class="u-visually-hidden">Close</span></button>
  </div>
  <div class="tooltip__content">
    <span class="cal-details__date">
      {{~#if allDay}}<time datetime="{{ start_iso }}">{{ start_date_string }}</time>
      {{~else}}<time datetime="{{ start_iso }}">{{ start_dayMonthTime }}</time>
        {{~#if end_dayMonthTime~}}&ndash;<time datetime="{{ end_iso }}">{{ end_dayMonthTime }}</time>{{/if}}
      {{~/if~}}
    </span>
    <span class="cal-details__summary">{{ summary }}</span>
    <span class="cal-details__description">{{ description }}</span>
    {{#if location }}
      <span class="cal-details__location"><span class="t-bold">Location: </span>{{ location }}</span>
    {{/if}}
    {{#if url_details}}
      <span class="t-block"><a class="t-bold" href="{{ url_details }}">Learn more</a></span>
    {{/if}}
    <div class="cal-details__add dropdown">
      <button class="button button--alt dropdown__button button--add-calendar">Add to calendar</button>
      <ul class="dropdown__panel" aria-hidden="true">
        <li class="dropdown__item"><a class="dropdown__value" href="{{ url_download }}">Apple Calendar</a></li>
        <li class="dropdown__item"><a class="dropdown__value" href="{{ url_google }}" target="_blank" rel="noreferrer">Google Calendar</a></li>
        <li class="dropdown__item"><a class="dropdown__value" href="{{ url_download }}">Outlook Calendar</a></li>
        <li class="dropdown__item"><a class="dropdown__value" href="{{ url_ms365 }}">Microsoft 365</a></li>
        
      </ul>
    </div>
  </div>
{{!-- </div> --}}
