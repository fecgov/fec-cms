<h4 class="dt-details__title"><a href="{{entityUrl this type="candidate" query=query}}">{{name}}</a></h4>

<div class="dt-details__sect">
  <table>
    <caption>Candidate information</caption>
    {{#dtDetailsTableRow "Candidate ID"~}}
      {{candidate_id}}
    {{/dtDetailsTableRow}}
    <tr>
      <th scope="row">Election years</th>
      <td>
        {{#each election_years}}
          {{! we only have election profile pages starting in 1980}}
          {{#if (gte this 1980)~}}
            <a href="{{electionUrl this parentContext=../this index=@index}}">
              {{this}}</a>{{#unless @last}}, {{/unless}}
          {{else~}}
            {{this}}{{#unless @last}}, {{/unless}}
          {{/if}}
        {{/each}}
      </td>
    </tr>
    {{#dtDetailsTableRow "Office sought"~}}
      {{office_full}}
    {{/dtDetailsTableRow}}
    {{#dtDetailsTableRow "Political party"~}}
      {{party_full}}
    {{/dtDetailsTableRow}}
    {{#unless (eq office 'P')}}
      {{#dtDetailsTableRow "State"~}}
        {{decodeState state}}
      {{/dtDetailsTableRow}}
    {{/unless}}
    {{#if (eq office 'H')}}
      {{#dtDetailsTableRow "District"~}}
        {{district}}
      {{/dtDetailsTableRow}}
    {{/if}}
    {{!-- TODO: CHECK committees.principal --}}
    {{#if committees.principal}}
      {{#dtDetailsTableRow "Principal campaign committees"~}}
      <ul>
        {{#each committees.principal~}}
          <li>
            <a href="{{entityUrl this type="committee"}}">
              {{this.name}}
            </a>
          </li>
        {{/each}}
      </ul>
      {{/dtDetailsTableRow}}
    {{/if}}
    {{#if committees.authorized}}
      {{#dtDetailsTableRow "Authorized campaign committees"~}}
        {{#each committees.authorized~}}
          <li>
            <a href="{{entityUrl this type="committee"}}">
              {{this.name}}
            </a>
          </li>
        {{/each}}
      {{/dtDetailsTableRow}}
    {{/if}}
    {{#if first_form_2}}
      {{#dtDetailsTableRow "First statement of candidacy"~}}
        <a href="{{first_form_2.pdf_url}}">{{first_form_2.document_description}}</a>
        <span class="t-block">Filed: {{datetime first_form_2.receipt_date format='pretty'}}</span>
      {{/dtDetailsTableRow}}
    {{/if}}
    {{#if last_form_2}}
      {{#dtDetailsTableRow "Most recent statement of candidacy"~}}
        <a href="{{last_form_2.pdf_url}}">{{last_form_2.document_description}}</a>
        <span class="t-block">Filed: {{datetime last_form_2.receipt_date format='pretty'}}</span>
      {{/dtDetailsTableRow}}
    {{/if}}
  </table>
</div>

{{#if showFinancialTotals}}
<div class="dt-details__sect">
  <table>
    <caption>Financial totals for {{time_period}}</caption>
    {{#dtDetailsTableRow "Receipts"~}}
      {{{currency receipts}}}
    {{/dtDetailsTableRow}}
    {{#dtDetailsTableRow "Disbursements"~}}
      {{{currency disbursements}}}
    {{/dtDetailsTableRow}}
    {{#dtDetailsTableRow "Ending cash on hand"~}}
      {{{currency cash_on_hand_end_period}}}
    {{/dtDetailsTableRow}}
    {{#dtDetailsTableRow "Debts owed by committee"~}}
      {{{currency debts_owed_by_committee}}}
    {{/dtDetailsTableRow}}
    {{#if (eq office 'P')}}
      {{#dtDetailsTableRow "Has accepted presidential public funds"~}}
        {{convertBoolean federal_funds_flag}}
      {{/dtDetailsTableRow}}
    {{/if}}
  </table>
</div>
{{/if}}
